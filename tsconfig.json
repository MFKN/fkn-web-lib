{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": false,
    "noImplicitAny": false,
    "outDir": "./lib",
    "outFile": "./lib/index",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@mfkn/oz-web/*": ["../web/*"]
    },
    "skipLibCheck": true,
    "types": []

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "targets": {
    "types": false
  }
}

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@mfkn/oz-web/*": ["../web/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
